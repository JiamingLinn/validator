{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "lib": ["dom", "es6"],
    "outDir": "dist",
    "pretty": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*.ts"]
}